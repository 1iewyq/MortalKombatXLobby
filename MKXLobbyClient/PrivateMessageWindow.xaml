<Window x:Class="MKXLobbyClient.PrivateMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Private Chat" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="lblChatWith" Grid.Row="0" 
                  Text="Private chat with: " 
                  Foreground="Gold" FontWeight="Bold" 
                  Margin="10" FontSize="14"/>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1" x:Name="messagesScrollViewer" 
                     VerticalScrollBarVisibility="Auto" Margin="5">
            <TextBlock x:Name="txtMessages" 
                      TextWrapping="Wrap" Foreground="White" 
                      Background="Transparent" Margin="5"/>
        </ScrollViewer>

        <!-- Input Area -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtMessageInput" Grid.Column="0" 
                    Height="30" KeyDown="TxtMessageInput_KeyDown"/>

            <Button x:Name="btnSend" Grid.Column="1" 
                   Content="Send" Width="60" Height="30" 
                   Click="BtnSend_Click"/>
        </Grid>
    </Grid>
</Window>