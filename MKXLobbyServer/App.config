<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="LobbyServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<services>
			<service name="LobbyService" behaviorConfiguration="LobbyServiceBehavior">
				<endpoint address="" binding="basicHttpBinding" contract="ILobbyService" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080/LobbyService" />
					</baseAddresses>
				</host>
			</service>

			<service name="LobbyDuplexService" behaviorConfiguration="LobbyServiceBehavior">
				<endpoint address="" binding="netTcpBinding" contract="ILobbyDuplexService" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8081/LobbyDuplexService" />
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>